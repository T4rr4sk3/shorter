{
  "name": "shorter",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch --encore-args=\"--port 8082\" ",
    "build": "node ace build --production",
    "test": "node ace test --watch",
    "start": "node server.js",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write ."
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "warn"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.7.0",
    "@japa/preset-adonis": "^1.0.16",
    "@japa/runner": "^2.0.8",
    "@symfony/webpack-encore": "^2.1.0",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/mysql": "^2.15.21",
    "@types/qrcode": "^1.5.5",
    "@types/tedious": "^4.0.7",
    "adonis-preset-ts": "^2.1.0",
    "eslint": "^8.16.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-adonis": "^2.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "pino-pretty": "^7.6.1",
    "prettier": "^2.6.2",
    "typescript": "~4.6",
    "youch": "^3.2.0",
    "youch-terminal": "^2.1.4"
  },
  "dependencies": {
    "@adonisjs/core": "^5.8.0",
    "@adonisjs/repl": "^3.1.0",
    "@adonisjs/session": "^6.2.0",
    "@adonisjs/shield": "^7.0.0",
    "@adonisjs/view": "^6.1.0",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.18.1",
    "proxy-addr": "^2.0.7",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.1.13",
    "source-map-support": "^0.5.21",
    "tedious": "^14.5.0"
  }
}
